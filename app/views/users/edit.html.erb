<div class="col-md-5 col-md-offsets-1">
    <h2>Update Profile</h2>
    
    <%= simple_form_for @user do |f| %>
        <div class="form-group">
            <%= f.input :email %>
        </div>
        <div class="form-group">
            <%= f.input :username, id: "username" %>
        </div>
        <div class="form-group">
            <%= f.input :name, id: "name" %>
        </div>
        <div class="form-group">
            <%= f.input :bio, id: "about", input_html: { cols: "50", rows: "10" } %>
        </div>
        <div class="form-group">
            <%= button_tag type: 'submit', id: "update-profile", class: "btn btn-primary"  do %>
                <i class="fa fa-btn fa-user"></i> Update Profile
            <% end %>
        </div>
    <% end %>
    
</div>