<div id="main-content" class="container-fluid">
	<div class="row">
		<div class="col-md-3">
			<ul class="list-group">
				<li class="list-group-item">
					<%= link_to "#{current_user.name}'s Profile", profile_index_path %>
				</li>
				<li class="list-group-item">
					<%= link_to 'Add New video', new_video_path %>
				</li>
				<li class="list-group-item active">
					<%= link_to 'My Uploaded videos', uploads_profile_index_path %>
				</li>
				<li class="list-group-item">
					<%= link_to 'My Favorited Videos', favourites_profile_index_path %>
				</li>
			</ul>
		</div>

		<div class="col-md-9">
      <h1>My Uploaded videos</h1>
      <hr>      
      <div id="video-library">
      	<div class="row">
      		<% @myuploads.each do |upload| %>
      			<div class="col-sm-4 col-md-4">
      				<%= link_to upload do %>
      					<img class="video-iframe" src="http://img.youtube.com/vi/<%= upload.url %>/0.jpg" allowfullscreen="">
      				<% end %>
      				<span class="pull-right dashboard-float">
      					<a id="favorite_video" class="favorite_video" href="#" data-video-url="3"></a>
      					<%= link_to edit_video_path(upload), class: "btn btn-primary btn-xs" do %>
      						<i class="fa fa-edit"></i>
      					<% end %>
      					<%= link_to upload, method: :delete, class: "btn btn-danger btn-xs delete-video" do %>
      						<i class="fa fa-trash"></i>
      					<% end %>
      				</span>
      				<section class="video">
                <div class="title">
                  <h4><%= link_to upload.title, upload %></h4>
                </div>
                <p><%= upload.title %></p>
            	</section>
      			</div>
      		<% end %>
	      </div>  
      </div>
    </div>

	</div>
</div>