<div id="landing-page" class="text-center">
  <section class="landing-page-title">
    <h1>Welcome to the <strong class="site-highlight">Learn Party</strong></h1>
    <h2>Get the best learning materials online. <strong class="site-highlight">On Demand. </strong></h2>
    <hr>
    <div class="landing-page-call-to-action">
      <% if user_signed_in? %>
        <%= link_to 'ADD NEW VIDEO', new_video_path, class: "btn btn-default" %>
        <%= link_to 'VIEW MY PROFILE', profile_index_path, class: "btn btn-success" %>

      <% else %>
      	<%= link_to 'LOGIN', new_user_session_path,class: "btn btn-default"  %>
      	<%= link_to 'REGISTER', new_user_registration_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </section>
  <a href="#main-content" id="scroll-to-content"><i class="fa fa-chevron-circle-down"></i></a>
</div>

<div id="main-content" class="container-fluid">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Videos By Category</h3>
            </div>
            <div class="panel-body popular-videos">
              <span class="badge"><%= link_to 'All', videos_path %></span>
              <% @tags.each do |tag| %>
                <span class="badge">
                	<%= link_to tag.name, tag_path(tag.name) %>
              	</span>
              <% end %>
            </div>
          </div>
        </div>
          <div class="col-md-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <h3 class="panel-title">Popular - Most Viewed</h3>
                  </div>
                  <div class="panel-body popular-videos">
                    <% @popular_video.each  do |popular_video|%>
                      <h5 class="top-videos">
                        <i class="fa fa-youtube-play"></i>
                        <%= link_to popular_video.title, popular_video %>
                        <span class="incognito-text">(<%= popular_video.impressionist_count %>)</span>
                      </h5>
                    <% end %>
                  </h5>
                  </div>
              </div>
          </div>
          <div class="col-md-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">Popular - Most Liked</h3>
                  </div>
                  <div class="panel-body popular-videos">
                    <% @videos.each do |video| %>
                      <h5 class="top-videos">
                        <i class="fa fa-youtube-play"></i>
                        <%= link_to video.title, video %>
                        <span class="incognito-text">(<%= video.get_upvotes.size %>)</span>
                      </h5>
                    <% end %>
                  </div>
              </div>
          </div>
          <div class="col-md-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <h3 class="panel-title">Popular - Most commented on</h3>
                  </div>
                  <div class="panel-body popular-videos">
                    <% @videos.each do |video| %>
                      <h5 class="top-videos">
                        <i class="fa fa-youtube-play"></i>
                        <%= link_to video.title, video %>
                        <span class="incognito-text">(<%= video.comments.size%>)</span>
                    </h5>
                  <% end %>
                  </div>
              </div>
          </div>
          <div class="col-md-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <h3 class="panel-title">Top video publishers</h3>
                  </div>
                  <div class="panel-body popular-videos">
                    <% @user.each do |user| %>
                      <span class="badge">
                        <%= link_to user.name, user %>
                        <span class="incognito-text">(<%= user.videos.size %>)</span>
                      </span>
                    <% end %>
                  </div>
              </div>
          </div>
      </div>
      <div class="col-md-9">
        <div id="video-library">
          <div class="row">
            <% @recent_videos.each do |recent_video| %>
              <div class="col-sm-4 col-md-4">
                <%= link_to recent_video do %>
                  <img class="video-iframe" src="http://img.youtube.com/vi/<%= recent_video.url %>/0.jpg" allowfullscreen="">
                <% end %>
                <section class="video">
                  <div class="title">
                    <h4>
                      <%= link_to recent_video.title, recent_video %>
                    </h4>
                  </div>
                    <p><%= recent_video.description %></p>
                </section>
              </div>
            <% end %>
          </div>
          <div class="row">
            <% @most_viewed_videos.each do |most_viewed_video| %>
              <div class="col-sm-4 col-md-4">
                <%= link_to most_viewed_video do %>
                  <img class="video-iframe" src="http://img.youtube.com/vi/<%= most_viewed_video.url %>/0.jpg" allowfullscreen="">
                <% end %>
                <section class="video">
                  <div class="title">
                    <h4>
                      <%= link_to most_viewed_video.title, most_viewed_video %>
                    </h4>
                  </div>
                    <p><%= most_viewed_video.description %></p>
                </section>
              </div>
            <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>